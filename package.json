{
  "name": "ai-101-ts",
  "publisher": "GoupilJeremy",
  "displayName": "ai-101-ts",
  "description": "VSCode AI agents with transparent HUD",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-101-ts.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ai-101-ts.applyPreset",
        "title": "Apply Configuration Preset",
        "category": "AI 101"
      },
      {
        "command": "ai-101-ts.exportConfig",
        "title": "Export Configuration",
        "category": "AI 101"
      },
      {
        "command": "ai-101-ts.importConfig",
        "title": "Import Configuration",
        "category": "AI 101"
      },
      {
        "command": "ai-101-ts.toggleFocusMode",
        "title": "Toggle Focus Mode",
        "category": "AI 101"
      },
      {
        "command": "ai-101-ts.toggleLargeText",
        "title": "Toggle Large Text Mode",
        "category": "AI 101"
      }
    ],
    "keybindings": [
      {
        "command": "ai-101-ts.toggleFocusMode",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "AI 101",
      "properties": {
        "ai101.llm.provider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "anthropic",
            "custom"
          ],
          "description": "Select the LLM provider to use."
        },
        "ai101.ui.transparency": {
          "type": "string",
          "default": "medium",
          "enum": [
            "minimal",
            "medium",
            "full"
          ],
          "description": "Set the transparency level of the HUD."
        },
        "ai101.ui.mode": {
          "type": "string",
          "default": "learning",
          "enum": [
            "learning",
            "expert",
            "focus",
            "team",
            "performance"
          ],
          "description": "Set the operating mode of the extension."
        },
        "ai101.performance.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum number of tokens to use for context."
        },
        "ai101.telemetry.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable opt-in telemetry for diagnostics."
        },
        "ai101.teamMode.largeText": {
          "type": "boolean",
          "default": false,
          "description": "Enable 125% scale for Team Mode screen sharing visibility."
        },
        "ai101.teamMode.surveyEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable team comprehension surveys (opt-in)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "js-tiktoken": "^1.0.10",
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.108.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  }
}