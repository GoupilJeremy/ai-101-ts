{
  "name": "suika",
  "publisher": "GoupilJeremy",
  "displayName": "Suika",
  "description": "Transparent AI assistant with sumi-e inspired HUD - see how AI thinks",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/GoupilJeremy/ai-101-ts.git"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "suika.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "suika.applyPreset",
        "title": "Apply Configuration Preset",
        "category": "Suika"
      },
      {
        "command": "suika.exportConfig",
        "title": "Export Configuration",
        "category": "Suika"
      },
      {
        "command": "suika.importConfig",
        "title": "Import Configuration",
        "category": "Suika"
      },
      {
        "command": "suika.toggleFocusMode",
        "title": "Toggle Focus Mode",
        "category": "Suika"
      },
      {
        "command": "suika.togglePerformanceMode",
        "title": "Toggle Performance Mode",
        "category": "Suika"
      },
      {
        "command": "suika.toggleLargeText",
        "title": "Toggle Large Text Mode",
        "category": "Suika"
      },
      {
        "command": "suika.toggleHighContrast",
        "title": "Toggle High Contrast Mode",
        "category": "Suika"
      },
      {
        "command": "suika.toggleColorblind",
        "title": "Toggle Colorblind Mode",
        "category": "Suika"
      },
      {
        "command": "suika.focusHud",
        "title": "Focus HUD for Keyboard Navigation",
        "category": "Suika"
      },
      {
        "command": "suika.addContextFile",
        "title": "Add File to Context",
        "category": "Suika"
      },
      {
        "command": "suika.removeContextFile",
        "title": "Remove File from Context",
        "category": "Suika"
      },
      {
        "command": "suika.viewArchitecture",
        "title": "View Detected Architecture",
        "category": "Suika"
      },
      {
        "command": "suika.setPhase",
        "title": "Set Development Phase",
        "category": "Suika"
      },
      {
        "command": "suika.acceptSuggestion",
        "title": "Accept AI Suggestion",
        "category": "Suika"
      },
      {
        "command": "suika.rejectSuggestion",
        "title": "Reject AI Suggestion",
        "category": "Suika"
      },
      {
        "command": "suika.toggleHUD",
        "title": "Toggle HUD Visibility",
        "category": "Suika"
      },
      {
        "command": "suika.forceAgentState",
        "title": "Force Agent State (Debug)",
        "category": "Suika Debug"
      },
      {
        "command": "suika.switchToLearningMode",
        "title": "Switch to Learning Mode",
        "category": "Suika"
      },
      {
        "command": "suika.switchToExpertMode",
        "title": "Switch to Expert Mode",
        "category": "Suika"
      },
      {
        "command": "suika.switchToTeamMode",
        "title": "Switch to Team Mode",
        "category": "Suika"
      },
      {
        "command": "suika.configureApiKeys",
        "title": "Configure API Keys",
        "category": "Suika"
      },
      {
        "command": "suika.resetConfig",
        "title": "Reset Configuration",
        "category": "Suika"
      },
      {
        "command": "suika.toggleAgentVisibility",
        "title": "Toggle Agent Visibility",
        "category": "Suika"
      },
      {
        "command": "suika.configureTelemetry",
        "title": "Configure Telemetry Settings",
        "category": "Suika"
      },
      {
        "command": "suika.openDocumentation",
        "title": "Open Documentation",
        "category": "Suika"
      },
      {
        "command": "suika.viewMetrics",
        "title": "View My Metrics",
        "category": "Suika"
      },
      {
        "command": "suika.exportMetrics",
        "title": "Export Metrics to JSON",
        "category": "Suika"
      },
      {
        "command": "suika.showGettingStarted",
        "title": "Show Getting Started",
        "category": "Suika"
      },
      {
        "command": "suika.showTroubleshooting",
        "title": "Show Troubleshooting",
        "category": "Suika",
        "icon": "$(question)"
      },
      {
        "command": "suika.openTroubleshootingArticle",
        "title": "Open Troubleshooting Article",
        "category": "Suika"
      },
      {
        "command": "suika.searchTroubleshooting",
        "title": "Search Troubleshooting",
        "category": "Suika",
        "icon": "$(search)"
      },
      {
        "command": "suika.viewChangelog",
        "title": "View Changelog",
        "category": "Suika",
        "icon": "$(history)"
      }
    ],
    "keybindings": [
      {
        "command": "suika.toggleHUD",
        "key": "ctrl+alt+h",
        "mac": "cmd+alt+h",
        "when": "editorTextFocus"
      },
      {
        "command": "suika.toggleFocusMode",
        "key": "ctrl+shift+alt+f",
        "mac": "cmd+shift+alt+f",
        "when": "editorTextFocus"
      },
      {
        "command": "suika.acceptSuggestion",
        "key": "ctrl+enter",
        "mac": "cmd+enter",
        "when": "editorTextFocus"
      },
      {
        "command": "suika.rejectSuggestion",
        "key": "ctrl+backspace",
        "mac": "cmd+backspace",
        "when": "editorTextFocus"
      },
      {
        "command": "suika.forceAgentState",
        "key": "ctrl+shift+alt+s",
        "mac": "cmd+shift+alt+s",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Suika",
      "properties": {
        "suika.llm.provider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "anthropic",
            "custom"
          ],
          "description": "Select the LLM provider to use."
        },
        "suika.ui.transparency": {
          "type": "string",
          "default": "medium",
          "enum": [
            "minimal",
            "medium",
            "full"
          ],
          "description": "Set the transparency level of the HUD."
        },
        "suika.ui.mode": {
          "type": "string",
          "default": "learning",
          "enum": [
            "learning",
            "expert",
            "focus",
            "team",
            "performance"
          ],
          "description": "Set the operating mode of the extension."
        },
        "suika.performance.maxTokens": {
          "type": "number",
          "default": 4096,
          "description": "Maximum number of tokens to use for context."
        },
        "suika.telemetry.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable opt-in telemetry for diagnostics."
        },
        "suika.teamMode.largeText": {
          "type": "boolean",
          "default": false,
          "description": "Enable 125% scale for Team Mode screen sharing visibility."
        },
        "suika.teamMode.surveyEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable team comprehension surveys (opt-in)."
        },
        "suika.performanceMode.autoActivate": {
          "type": "boolean",
          "default": true,
          "description": "Auto-activate Performance Mode on low-memory systems (<4GB RAM)."
        },
        "suika.performanceMode.autoSuggest": {
          "type": "boolean",
          "default": true,
          "description": "Suggest Performance Mode when low FPS is detected."
        },
        "suika.performanceMode.collisionThrottleMs": {
          "type": "number",
          "default": 500,
          "description": "Anti-collision check interval in Performance Mode (ms)."
        },
        "suika.performanceMode.metricsThrottleMs": {
          "type": "number",
          "default": 1000,
          "description": "Vital Signs Bar update interval in Performance Mode (ms)."
        },
        "suika.accessibility.highContrast": {
          "type": "boolean",
          "default": null,
          "description": "Enable High Contrast Mode. Set to null for auto-detection based on VSCode theme."
        },
        "suika.accessibility.autoDetectHighContrast": {
          "type": "boolean",
          "default": true,
          "description": "Automatically enable High Contrast Mode when VSCode High Contrast theme is active."
        },
        "suika.accessibility.colorblind": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Enable Colorblind Accessibility Mode"
            },
            "type": {
              "type": "string",
              "enum": [
                "none",
                "deuteranopia",
                "protanopia",
                "tritanopia"
              ],
              "default": "none",
              "description": "Type of color blindness to optimize for"
            }
          },
          "description": "Colorblind accessibility settings"
        },
        "suika.keyboard.shortcuts": {
          "type": "object",
          "properties": {
            "enableHudNavigation": {
              "type": "boolean",
              "default": true,
              "description": "Enable keyboard navigation for HUD elements"
            },
            "tabNavigation": {
              "type": "string",
              "default": "Tab",
              "description": "Key for tab navigation through HUD elements"
            },
            "shiftTabNavigation": {
              "type": "string",
              "default": "Shift+Tab",
              "description": "Key for reverse tab navigation"
            },
            "activateElement": {
              "type": "string",
              "default": "Enter",
              "description": "Key to activate selected HUD element"
            },
            "dismissElement": {
              "type": "string",
              "default": "Escape",
              "description": "Key to dismiss or close HUD elements"
            },
            "agentNavigation": {
              "type": "string",
              "default": "Arrow Keys",
              "description": "Keys for spatial navigation between agents"
            },
            "alertNavigation": {
              "type": "string",
              "default": "Arrow Keys",
              "description": "Keys for spatial navigation between alerts"
            }
          },
          "description": "Keyboard navigation shortcuts for HUD accessibility"
        },
        "suika.architecture.overrides": {
          "type": "object",
          "default": {},
          "description": "Override detected project architecture patterns (e.g., techStack, patterns, conventions)."
        },
        "suika.errors.openLinksIn": {
          "type": "string",
          "default": "SimpleBrowser",
          "enum": [
            "SimpleBrowser",
            "ExternalBrowser"
          ],
          "description": "Specify where documentation links should be opened."
        }
      }
    },
    "walkthroughs": [
      {
        "id": "suika.gettingStarted",
        "title": "%walkthrough.gettingStarted.title%",
        "description": "%walkthrough.gettingStarted.description%",
        "steps": [
          {
            "id": "welcome",
            "title": "%walkthrough.welcome.title%",
            "description": "%walkthrough.welcome.description%",
            "media": {
              "svg": "media/walkthrough/welcome.svg",
              "altText": "%walkthrough.welcome.altText%"
            }
          },
          {
            "id": "quickTour",
            "title": "%walkthrough.quickTour.title%",
            "description": "%walkthrough.quickTour.description%",
            "media": {
              "svg": "media/walkthrough/quick-tour.svg",
              "altText": "%walkthrough.quickTour.altText%"
            }
          },
          {
            "id": "modes",
            "title": "%walkthrough.modes.title%",
            "description": "%walkthrough.modes.description%",
            "media": {
              "svg": "media/walkthrough/modes.svg",
              "altText": "%walkthrough.modes.altText%"
            },
            "completionEvents": [
              "onCommand:suika.switchToLearningMode",
              "onCommand:suika.switchToExpertMode",
              "onCommand:suika.switchToTeamMode"
            ]
          },
          {
            "id": "firstSuggestion",
            "title": "%walkthrough.firstSuggestion.title%",
            "description": "%walkthrough.firstSuggestion.description%",
            "media": {
              "svg": "media/walkthrough/first-suggestion.svg",
              "altText": "%walkthrough.firstSuggestion.altText%"
            },
            "completionEvents": [
              "onCommand:suika.acceptSuggestion",
              "onCommand:suika.rejectSuggestion"
            ]
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "suika-sidebar",
          "title": "Suika",
          "icon": "media/suika-logo.svg"
        }
      ]
    },
    "views": {
      "suika-sidebar": [
        {
          "type": "webview",
          "id": "suika.webview",
          "name": "Suika HUD",
          "icon": "media/suika-logo.svg",
          "contextualTitle": "Suika"
        },
        {
          "type": "webview",
          "id": "suika.troubleshootingView",
          "name": "Troubleshooting",
          "icon": "$(question)",
          "contextualTitle": "Troubleshooting"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "suika.showGettingStarted",
          "when": "view == suika.webview",
          "group": "navigation"
        },
        {
          "command": "suika.configureApiKeys",
          "when": "view == suika.webview",
          "group": "navigation"
        },
        {
          "command": "suika.openDocumentation",
          "when": "view == suika.webview",
          "group": "navigation"
        },
        {
          "command": "suika.toggleHUD",
          "when": "view == suika.webview",
          "group": "actions"
        }
      ],
      "editor/context": [
        {
          "command": "suika.addContextFile",
          "group": "Suika",
          "when": "resourceLangId"
        },
        {
          "command": "suika.focusHud",
          "group": "Suika",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "docs:generate": "typedoc",
    "docs:serve": "npx serve docs/api -p 3000",
    "docs:watch": "typedoc --watch",
    "docs:clean": "rimraf docs/api",
    "docs:validate": "npx ts-node scripts/validate-docs.ts",
    "changelog": "standard-version"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@vscode/extension-telemetry": "^1.2.0",
    "js-tiktoken": "^1.0.10",
    "openai": "^4.28.0",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/chai": "^5.2.3",
    "@types/jsdom": "^27.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.30",
    "@types/semver": "^7.7.1",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.108.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "axe-core": "^4.8.2",
    "chai": "^6.2.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.25.1",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.1",
    "standard-version": "^9.5.0",
    "ts-node": "^1.7.1",
    "typedoc": "^0.28.16",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17"
  }
}